{
    "name": "WHU",
    "phase": "train", // train or val
    "gpu_ids": [
        0
    ],
    "path": { //set the path
        "log": "logs",
        "tb_logger": "tb_logger",
        "results": "results",
        "checkpoint": "checkpoint",
        // "resume_state": "experiments/WHU/checkpoint/I200_E1"
        // "resume_state": "experiments/distributed_high_sr_ffhq_210901_121212/checkpoint/I830000_E32" //pretrain model or training state
        // "resume_state": "experiments/WHU_250207_195354/checkpoint/I3000_E60" 
        "resume_state": null
    },
    "datasets": {
        "train": {
            "name": "WHU",
            "mode": "HR", // whether need LR img
            "dataroot": "dataset/WHU_64_512",
            "datatype": "img", //lmdb or img, path of img files
            "l_resolution": 64, // low resolution need to super_resolution
            "r_resolution": 512, // high resolution
            "batch_size": 3,
            "num_workers": 8,
            "use_shuffle": true,
            "data_len": -1, // -1 represents all data used in train
            "pin_memory": true,
            "persistent_workers": true
        },
        "val": {
            "name": "WHU_512",
            "mode": "LRHR",
            "dataroot": "dataset/WHU_64_512",
            "datatype": "img", //lmdb or img, path of img files
            "l_resolution": 64,
            "r_resolution": 512,
            "data_len": 5
        }
    },
    "model": {
        "which_model_G": "sr3", // use the ddpm or sr3 network structure
        "finetune_norm": false,
        "unet": {
            "in_channel": 6,
            "out_channel": 3,
            "inner_channel": 64,
            "norm_groups": 16,
            "channel_multiplier": [
                1,
                2,
                4,
                // 8,
                // 16
                8
                // 16
            ],
            "attn_res": [
                64
            ],
            "res_blocks": 1,
            "dropout": 0
        },
        "beta_schedule": { // use munual beta_schedule for acceleration
            "train": {
                "schedule": "linear",
                "n_timestep": 200,
                "linear_start": 1e-8,
                "linear_end": 1e-4
            },
            "val": {
                "schedule": "linear",
                "n_timestep": 200,
                "linear_start": 1e-8,
                "linear_end": 1e-4
            }
        },
        "diffusion": {
            "image_size": 512,
            "channels": 3, //sample channel
            "conditional": true // unconditional generation or unconditional generation(super_resolution)
        }
    },
    "train": {
        "n_iter": 5000,
        "val_freq": 5e2,
        "save_checkpoint_freq": 5e2,
        "print_freq": 20,
        "optimizer": {
            "type": "adam",
            "lr": 1e-5
        },
        "ema_scheduler": { // not used now
            "step_start_ema": 1000,
            "update_ema_every": 1,
            "ema_decay": 0.9999
        }
    },
    "wandb": {
        "project": "distributed_high_sr_ffhq"
    }
}